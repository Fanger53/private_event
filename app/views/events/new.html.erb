
<div class="row">
<div class="col-lg-12 col-md-6 col-6 d-flex flex-column  align-items-center justify-content-center">
<h3 class="text-center">form for events</h3>
<%=form_with model: @event do |f|%>
<div>
<%= f.label :name %>
<%= f.text_field :name%>
</div>
<div>
<%= f.label :location %>
<%= f.text_field :location%>
</div>
<div>
<%= f.label :date %>
<%= f.datetime_field :date%>
</div>
<div>
<%= f.label :description %>
<%= f.text_area :description %>
</div>
<div>
<%= f.submit%></div>
<%end%>
</div>
</div>

